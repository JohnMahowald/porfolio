<!-- welcome section -->
<div class='main-section'>
  <div class='title-wrapper'>
    <h1>John Mahowald</h1>
    </h2>Web Developer</h2>
  </div>
  
  <div class='main-nav-wrapper'>
    <div class='main-nav-down'>
      <a href='#' data-link-target='#projects'>Down</a>
    </div>
  </div>
</div>

<!-- top navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <%= render 'top_nav' %>
</div>
    
<div class="container-fluid">
  <div class="row row-offcanvas row-offcanvas-left" id='main-row'>
    <!-- sidebar -->
    <div class="col-xs-6 col-sm-3 sidebar-offcanvas" 
         id="sidebar" 
         role="navigation"><%= render 'sidebar' %></div>
    
    <!-- main area -->
    <div class="col-xs-12 col-sm-9" id='main-content'>
      <div class='main-section' id='projects'>
        <h1>Projects</h1>
        <% Project.all.each do |p| %>
          <%= render 'project', project: p %>
        <% end %>
      </div>
      
      <div class='main-section' id='skills'>
        <h1>The Skills Section</h1>
      </div>
      
      <div class='main-section' id='about'>
        <h1>The About Section</h1>
      </div>
      
      <div class='main-section' id='contact'>
        <h1>The Contact Section</h1>
      </div>
      
    </div><!-- /.col-xs-12 main -->
  </div><!-- /.row -->
</div><!--/.container-->